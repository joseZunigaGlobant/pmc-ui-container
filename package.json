{
  "name": "react-remote-template",
  "version": "1.0.0",
  "description": "react frontend template with module federation (as remote)",
  "scripts": {
    "dev": "webpack-cli serve",
    "build": "NODE_ENV=production webpack-cli build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "yarn build && concurrently \"cd dist && serve --single\" \"cypress run\"",
    "lint": "eslint './**/*.{ts,tsx}' --no-error-on-unmatched-pattern",
    "prettier": "prettier ./**/*.{ts,tsx} --no-error-on-unmatched-pattern --write",
    "ts-lint": "tsc --noEmit",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@emotion/jest": "^11.3.0",
    "@swc/jest": "^0.2.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "cypress": "^9.5.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^27.1.1",
    "jest-css-modules": "^2.1.0",
    "msw": "^0.35.0",
    "prettier": "^2.4.1",
    "style-loader": "^3.2.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@bondi-js/config": "^0.0.25",
    "@bondi-js/utils": "^0.0.30",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "axios": "^0.21.4",
    "axios-hooks": "^2.7.0",
    "concurrently": "^7.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "husky": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.3",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.3.0",
    "serve": "^13.0.2"
  }
}
